set nocompatible
set ttyfast
set switchbuf=useopen
set shortmess=atTI
set showmode
set showcmd
set nostartofline
set nohlsearch
set hidden
set nobackup
set noswapfile

set background=dark
set ruler
set rulerformat=%=%h%m%r%w\ %(%c%V%),%l/%L\ %P

set ts=4 sw=4
setlocal expandtab
setlocal autoindent
setlocal smarttab
setlocal formatoptions=croql

filetype plugin indent on
